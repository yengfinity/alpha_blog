<% if @article.errors.any? %>
  <h2>The following errors prevented the article from getting created</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <div class="form-group">
    <%= f.label :title %><br/>
    <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br/>
    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>

[ <%= link_to "Cancel request and return to article listings", articles_path %> ]